@using gurukul.Utils

@inject ILoggerService LoggerService

<div class="modal fade" role="dialog" tabindex="-1" id="@ModalId">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Are you sure?</h4><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete @Name record?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-light" type="button" data-bs-dismiss="modal">No</button>
                <button class="btn btn-danger" type="button" data-bs-dismiss="modal" @onclick="OnConfirm">Yes</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string ModalId { get; set; }
    [Parameter] public string Name { get; set; }
    [Parameter] public Action OnConfirm { get; set; }
    
    private void Delete()
    {
        LoggerService.Log("Delete Clicked");
        OnConfirm();
    }
}