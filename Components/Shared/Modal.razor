@using gurukul.Utils
<div class="modal fade" role="dialog" tabindex="-1" id="@ModalId">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    @(Type == ModalType.CREATE ? "Add" : "Update")
                    @Name
                </h4><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" type="submit" form="@FormId" data-bs-dismiss="modal">
                    @(Type == ModalType.CREATE ? "Add" : "Update")
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string ModalId { get; set; }

    [Parameter] public string Name { get; set; }

    [Parameter] public string FormId { get; set; }

    [Parameter] public ModalType Type { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object> AdditionalAttributes { get; set; }

}